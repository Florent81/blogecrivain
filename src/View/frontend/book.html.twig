{% extends 'base.html.twig' %}

{% block title %}Chapitres{% endblock %}
{% block body %}
<div class="container">

    {% for chapter in chapters %}
    <div class="block-chapters">
        <div class="chapters-title">
        {{ chapter.title }}
        {{ chapter.datePublication|date('d m Y') }}</div>
        <div class="chapters-content">
        {{chapter.content|slice(0, 600) }}
        ...<a href="chapitre/id={{ chapter.id }}"> Tout lire</a></div>
    </div>
    {% endfor %}
 </div>
{% endblock %}