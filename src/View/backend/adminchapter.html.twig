{% extends 'adminbase.html.twig' %}
{% block head %}
  <link href="Public/CSS/theme.css" rel="stylesheet">
<script type="text/javascript" src="tiny_mce/tiny_mce.js"></script>
<script src="https://cloud.tinymce.com/stable/tinymce.min.js"></script>
<script>tinymce.init({
  selector: 'textarea',  // change this value according to your HTML
});</script>
    {% endblock %}
{% block title %}Administration des chapitres{% endblock %}
{% block body %}




    <form action="ajoutChapitre" method="post">

      <div name="AddChapter">
      <label for="AddChapter" style="text-align: center"><h2> Nouveau chapitre:</h2></label>
      </div>


      <div name="TitleAddChapter">
      <label for="TitleAddChapter"><h3> Titre :</h3></label>
      <input type="text" name="title"/><br />
      </div>

      <div name="ContentAddChapter">
      <label for="ContentAddChapter" style="text-align: center"><h3> Contenu :</h3></label><br />
        <div name="Content">
      <textarea rows="10" cols="20" name="content" max-width:"200px"></textarea><br />
        </div>
      </div>
      <input type="submit" value="Modifier" name="modifier" />
     <input type="submit" value="Ajouter" name="addChapter" />
      </p>
    </form>

    <div name="ListAllChapters">
      <label for="ListAllChapter"><h2> Liste des chapitres:</h2></label>
    {% for chapter in chapters %}
    <div class="block-chapters">
        <div class="row">
             <div class="col-md-8 center-block">
                <div class="chapters-title">
                     <h2> {{ chapter.title }}</h2> {{ chapter.date_publication|date('d m Y') }}
                </div>
                <div class="chapters-content">
                 {{chapter.content|slice(0, 100) | raw}}
                 ...<a href="showchapter&id={{ chapter.id }}"> Tout lire</a>
                 <a href="deleteChapter&amp;id={{chapter.id}}" id="deleteChapter">
                 Supprimer</a>


                </div>
            </div>
        </div>
    </div>
    {% endfor %}



{% endblock %}
